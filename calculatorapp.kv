<CalculatorLayout>:
    display: entry
    rows: 5
    padding: 10
    spacing: 10

    TextInput:
        id: entry
        text: ''
        font_size: 32
        multiline: False
        readonly: True
        halign: 'right'
        valign: 'middle'

    Button:
        text: "7"
        on_press: entry.text += self.text
    Button:
        text: "8"
        on_press: entry.text += self.text
    Button:
        text: "9"
        on_press: entry.text += self.text
    Button:
        text: "+"
        on_press: entry.text += self.text

    # FÃ¼gen Sie hier die weiteren Buttons hinzu (0-6, -, *, /)

    Button:
        text: "C"
        on_press: entry.text = ''
    Button:
        text: "="
        on_press: root.calculate(entry.text)
